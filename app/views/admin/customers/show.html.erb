<h4><%= @customer.family_name + " " + @customer.first_name %>さんの会員詳細</h4>

<div class="row mt-4">
  <div class="col-sm-8">

  </div>
  <div class="col-sm-8">
    <table class="table table-borderless">
      <tbody>
        <tr>
          <td>会員ID</td>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= @customer.family_name + " " + @customer.first_name %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= @customer.family_kana_name + " " + @customer.first_kana_name %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @customer.post_number %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <% if @customer.is_withdrawal == false %>
            <td class="text-success font-weight-bold">有効</td>
          <% else %>
            <td class="text-secondary">退会</td>
          <% end %>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<div class="form-group row mt-4">
  <div class="col-sm-9 offset-sm-3">
    <%= link_to '編集する', edit_admin_customer_path, class: "btn btn-success" %>
    <%= link_to '注文履歴一覧を見る', admin_items_path, class: "btn btn-primary" %>
  </div>
</div>