<div class="container">
  <h4 style="margin-top: 30px; background-color: rgba(128, 128, 128, 0.2); padding-left: 20px; padding-right: 20px; display: inline-block;">会員一覧</h4>
  <div class="row">
    <div class="col-10 mx-auto">
      <table class="table">
        <thead class="table-secondary">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody style="margin-top: 5px; margin-bottom: 5px;">
          <% @customers.each do |customer| %>
          <tr>
            <td style="width: 200px"><%= customer.id %></td>

            <td><%= link_to customer.family_name, admin_customer_path(customer) %><%= link_to customer.first_name, admin_customer_path(customer) %></td>
            
            <td><%= customer.email %></td>
            <td>
              <% if customer.is_withdrawal == false %>
                有効
              <% else %>
                退会済み
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div><!-- row -->
</div><!-- container -->