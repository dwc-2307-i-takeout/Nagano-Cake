<h1>商品新規登録</h1>

<%= form_with model: @item, url: '/items', method: :post do |f| %>

  <h4>画像投稿フォーム</h4>
  <%= f.file_field :item_image %>

  <h4>商品名</h4>
  <%= f.text_field :title %>

  <h4>商品説明</h4>
  <%= f.text_area :body %>

  <h4>ジャンル</h4>
  <%= f.select :faculty, [["ケーキ", "ケーキ"], ["プリン", "プリン"], ["焼き菓子", "焼き菓子"], ["キャンディ", "キャンディ"]], include_blank: "--選択して下さい--" %>

  <h4>税抜価格</h4>
  <%= f.text_area :price %>円

  <h4>販売ステータス</h4>
  <%= f.radio_button :status, true %>
  <%= f.label :'販売中' %>

  <%= f.radio_button :status, false %>
  <%= f.label :'販売停止中' %>

  <%= f.submit '新規登録', class: "btn btn-primary %>
<% end %>