<h1>商品新規登録</h1>

<%= form_with model: @item, url: '/items', method: :post do |f| %>

  <h4>画像投稿フォーム</h4>
  <%= f.file_field :image %>

  <h4>商品名</h4>
  <%= f.text_field :name %>

  <h4>商品説明</h4>
  <%= f.text_area :explanation %>

  <h4>ジャンル</h4>
  <%= f.select :genres_id, [["ケーキ", "ケーキ"], ["プリン", "プリン"], ["焼き菓子", "焼き菓子"], ["キャンディ", "キャンディ"]], include_blank: "--選択して下さい--" %>

  <h4>税抜価格</h4>
  <%= f.number_field :price, placeholder: '1000' %>円

  <h4>販売ステータス</h4>
  <%= f.radio_button :is_sale, true %>
  <%= f.label :'販売中' %>

  <%= f.radio_button :is_sale, false %>
  <%= f.label :'販売停止中' %>

  <%= f.submit '新規登録', class: "btn btn-primary" %>
<% end %>