<div class="container my-5">
  <div class="row">
    <h4>商品一覧</h4>
  </div>

  <div class="text-right">
    <%= link_to "＋", new_admin_item_path, class: 'btn btn-default' %>
  </div>

  <div>
    <table class='table table-hover table-inverse'>
      <div class="row mt-1">
        <table class="table table-light hover text-center">
          <thead>
            <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th>税抜価格</th>
              <th>ジャンル</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to item.name, admin_item_path(item) %></td>
              <td><%= item.price %></td>
              <td><%= item.genre.name %></td>
              <td>
                <% if item.is_sale == true %>
                  <p class="text-success"><strong>販売中</strong></p>
                <% else %>
                  <p class="text-secondary"><strong>売切れ</strong></p>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <div class="d-flex justify-content-center text-center">
          <%= paginate @items %>
        </div>
      </div>
    </table>
  </div>
</div>
