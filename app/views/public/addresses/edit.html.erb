<div class="container my-5">
  <% render "layouts/errors", obj: @address %>
  <div class="row">
    <h4 class="col-4 ml-5 pb-3">
      <span class="px-3" style="background-color:#d3d3d3;">
        配送先編集
      </span>
    </h4>
  </div><!-- row -->

<%= form_with model: @address, url: public_address_path do |f| %>
<div class="form-group row">
  <label>郵便番号（ハイフンなし）</label>
  <%= f.text_field :post_number %>
</div>

<div class="form-group row">
  <label>住所</label>
  <%= f.text_field :address %>
</div>

<div class="form-group row">
  <label>宛名</label>
  <%= f.text_field :name %>
</div>

<%= f.submit '変更内容を保存', class: "btn btn-success ml-3" %>
<% end %>
</div>