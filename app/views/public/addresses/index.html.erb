<div class="container my-5">
  <div class="row">
    <h4 class="col-4 ml-5 pb-3">
      <span class="px-3" style="background-color:#d3d3d3;">
        配送先登録/一覧
      </span>
    </h4>
  </div><!-- row -->

  <%= form_with model: @address, url: public_addresses_path, method: :post, local: true do |f| %>
    <label>郵便番号（ハイフンなし）</label>
    <div class="mb-2">
      <%= f.text_field :post_number, placeholder: "0000000", autofocus: true %>
    </div>

    <label>住所</label>
    <div class="mb-2">
      <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", style: "width: 40%;" %>
    </div>

    <label>宛名</label>
    <div>
      <%= f.text_field :name, placeholder: "令和　道子" %>
    </div><br>

    <%= f.submit "新規登録", class: "btn btn-success" %>
  <% end %><br>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th class="border border-dark table-active">郵便番号</th>
        <th class="border border-dark table-active">住所</th>
        <th class="border border-dark table-active">宛名</th>
        <th class="border border-dark table-active"></th>
      </tr>
    </thead>

    <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td class="border border-dark align-middle bg-white"><%= address.post_number %></td>
        <td class="border border-dark align-middle bg-white"><%= address.address %></td>
        <td class="border border-dark align-middle bg-white"><%= address.name %></td>
        <td class="border border-dark align-middle bg-white text-center">
          <%= link_to "編集する", edit_public_address_path(address.id), class: "btn btn-success" %>
          <%= link_to "削除する", public_address_path(address.id), method: :delete, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
