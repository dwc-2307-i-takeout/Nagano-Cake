<div class="container mt-5">
  <div class="row">
    <div class="col-md-3">
      <%= render "genre", genres: @genres %>
    </div>
    <div class="col-md-9">
      <h3>商品一覧 (全<%= @items.count %>件)</h3>

      <table>
        <% @items.each do |item| %>
          <tbody>
            <tr>
              <th><%= item.name %></th>
              <td>
                <%= link_to public_item_path(item) do %>
                  <%= image_tag item.image %>
                <% end %>
              </td>
              <td>￥<%= item.price.to_s(:delimited) %></td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
