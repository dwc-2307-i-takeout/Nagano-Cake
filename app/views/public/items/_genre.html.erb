<table class="table table-bordered table-striped">
  <thead>
    <th class="text-center table-light" style: "background-color: #a0522d;">-- ジャンル de 検索 --</th>
  </thead>
  <tbody>
    <% genres.each do |genre| %>
      <tr>
        <td class="align-middle table-light">
          <%= link_to public_items_path(genre_id: genre.id) do %>
            <%= genre.name %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>