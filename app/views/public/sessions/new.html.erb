<h1>Public::Sessions#new</h1>
<p>Find me in app/views/public/sessions/new.html.erb</p>
<div class='container'>
  <div class='row'>
    <div class="col-3"></div>
    <div class="col-3">
      <h2>ログイン</h2>
    </div>
    <div class="col-6"></div><!-- 空白 -->
  </div><!-- row -->

            <div class='row'>
            <div class="col-3"></div>
          <div class="col-3">
            <h2>会員の方はこちらからログイン</h2>
          </div>
        </div><!-- row -->

  <div class='row'>
    <div class="col-4"></div>
    <div class="col-6">
      <%= form_with model: @customer, url: customer_session_path(resource_name), local: true do |f| %>
        <div class="input-row">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com" %>
        </div>

        <div class="input-row">
          <%= f.label :password, "パスワード" %>
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="input-row">
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          </div>
        <% end %>
</div><!-- col-6 -->

        <div class="input-row">
          <div class="actions">
            <%= f.submit "ログイン", class: 'btn btn-sm btn-primary' %>
          </div>
        </div>
      <% end %>
    </div>
  </div><!-- row -->
</div><!-- container -->
