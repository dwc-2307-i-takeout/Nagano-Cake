<div class="container">
    <%= render "layout/errors", obj: @cart_item %>
    <div class="row">
        <div>
            <div>
                <h4>ショッピングカート</h4>
                <%= if @cart_items.exists? %>
                <p>
                    <%= link_to "カートを空にする",
                                destroy_all_public_cart_items_path,
                                method: :delete,
                                data: { confirm: "本当にカート内の全商品を削除しても宜しいですか？" },
                                class: "btn btn-danger" %>
                </p>
            </div>

            <table class="table">
                <thead>
                    <tr>
                        <th>商品名</th>
                        <th>単価（税込）</th>
                        <th>数量</th>
                        <th>小計</th>
                        <th></th>
                    </tr>
                </thead>
                <% @cart_items.each do |cart_item| %>
                    <%= form_with model: ccart_item, url: public_cart_item_path(cart_item.id), method: :patch do |f| %>
                        <tbody>
                            <tr>
                                <td>
                                   <%= image_tag cart_item.item_image(100, 100) %>
                                   <%= cart_item.item.name %>
                                </td>
                                <td><%= (cart_item.item.tax_included).to_s(:delimited) %></td>
                                <td>
                                    <%= f.select :quantity, *[1..100]%>, selected: cart_item.quantity %>
                                    <% f.submit "変更", class: "btn btn-success" %>
                                </td>
                                <td><%= (cart_item.total_price).to_s(:delimited) %></td>
                                <td>
                                    <%= link_to "削除する",
                                                public_cart_item_path(cart_item.id),
                                                method: :delete,
                                                data: { confirm: "対象品をカートから削除しますか？" },
                                                class: "btn btn-danger" %>
                                </td>
                                <% @all_price = @all_price + cart_item.total_price %>
                            </tr>
                        </tbody>
                    <% end %>
                <% end %>
                        <tbody>
                            <tr>
                                <td><%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %></td>
                                <td>合計金額</td>
                                <td><%= total_price.to_s(:delimited) %></td>
                            </tr>
                        </tbody>
            </table>
        </div>
    </div>
    <% unless @cart_items.blank? %>
        <div class="text-center">
            <%= link_to "情報入力に進む",
                            new_public_order_path,
                            class: "btn btn-danger" %>
        </div>
    <% end %>
</div>