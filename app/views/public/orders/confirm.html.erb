<div class="container my-5">
  <div class="row">
    <div class="col">
      <h4><strong>注文情報確認</strong></h4>
    </div>
  </div><!-- row -->

  <div class="row">
    <div class="col-7">
      <table>
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart| %>
            <tr>
              <td><%= cart.item.name %></td>
              <td><%= (cart.item.tax_included).to_s(:delimited) %></td>
              <td><%= cart.quantity %></td>
              <td><%= (cart.item.price*cart.quantity).to_s(:delimited) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-3">
      <table>
        <tr>
          <td>送料</td>
          <td><%= @order.postage %></td>
        </tr>
        <tr>
          <td>商品合計</td>
          <td><%= @all_price %></td>
        </tr>
        <tr>
          <td>請求金額</td>
          <td><%= @order.billing_amount %></td>
        </tr>
      </table>
    </div>
  </div><!-- row -->

  <div class="row">
    <div class="col">
      <%= @total.to_s(:delimited) %>
      <p>お届け先</p>
      <%= @order.address %>

      <%= form_with model: @order, url: public_orders_path, local: true do |f| %>
        <%= f.hidden_field :name %>
        <%= f.hidden_field :address %>
        <%= f.hidden_field :post_number %>
        <%= f.hidden_field :postage %>
        <%= f.hidden_field :billing_amount %>
        <%= f.hidden_field :total_price, value: @total %>
        <%= f.submit "注文を確定する" %>
      <% end %>
    </div>
  </div><!-- row -->
</div><!-- container -->
