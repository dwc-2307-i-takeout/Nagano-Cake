<div class="container ">
<h4>注文情報入力</h4>

<%= form_with model: @order, url: public_orders_confirm_path, local: true do |f| %>

<div>
  <p>支払い方法</p>
   <%= f.radio_button :payment_method, 0%>
   <%= f.label :payment_method,  "クレジット" %><br>
   <%= f.radio_button :payment_method, 1%>
   <%= f.label :payment_method,  "銀行振込" %><br>
</div>

<div>
  <p>お届け先</p>

  <%= f.radio_button :address_number, 1 %>
  <%= f.label :address_number_1, "ご自身の住所" %><br>
  <%= current_customer.post_number + " " + current_customer.address %><br>
  <%= current_customer.family_name + " " + current_customer.first_name %><br>
  <%= f.radio_button :address_number, 2 %>
  <%= f.label :address_number_2, "登録済み住所から選択" %><br>
  <%= f.collection_select :registered, current_customer.addresses.all, :id, :address %><br>

  <%= f.radio_button :address_number, 3 %>
  <%= f.label :address_number_3, "新しいお届け先" %><br>
  <%= f.label :post_number, "郵便番号（ハイフンなし）" %>
  <%= f.text_field :post_number, placeholder: "0000000" %><br>

  <%= f.label :address, "住所　　　　　　　　　　" %>
  <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", style: "width: 40%;" %><br>

  <%= f.label :address_name, "宛名　　　　　　　　　　" %>
  <%= f.text_field :address_name, placeholder: "令和　道子" %><br>
  <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
  </div>
<% end %>
</div>