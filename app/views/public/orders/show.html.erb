<h1>注文履歴詳細</h1>

<h4>注文情報</h4>

<table>
  <tr>
    <td>注文日</td>
    <td><%= @order.created_at %></td>
  </tr>
  
  <tr>
    <td>配送先</td>
    <td> <%= @order.post_number %><br>
        <%= @order.address %><br>
        <%= @order.name %>
    </td>
  </tr>
  
  <tr>
    <td>支払い方法</td>
    <td><%= @order.payment_method %></td>
  </tr>
  
  <tr>
    <td>ステータス</td>
    <td><%= @order.status %></td>
  </tr>
  <% end %>
  
</table>

<h4>請求情報</h4>
<table>
 
  <tr>
    <td>商品合計</td>
    <td><%= @order.billing_amount - @order.postage %></td>
  </tr>
  
  <tr>
    <td>配送料</td>
    <td> <%= @order.postage %></td>
  </tr>
  
  <tr>
    <td>ご請求金額</td>
    <td><%= @order.billing_amount %></td>
  </tr>
</table>

<h4>注文内容</h4>

<table>
  <thead>
  <tr>
      <th>商品</th>
      <th>単価（税込）</th>
      <th>個数</th>
      <th>小計</th>
   </tr>
  </thead>
    <% @order.order_details.each do |order_detail| %>
  <tr>
    <td><%= order_detail.item.name %></td>
    <td><%= order_detail.price %></td>
    <td><%= order_detail.quantity %></td>
    <td><%= order_detail.sub_total %></td>
  </tr>
  <% end %>
  
</table>